@model TelecomWeb.Models.TariffPlan

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Тарифный план</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TariffName)
        </dd>
        <dt class="col-sm-2">
            Абонентская плата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionFee)
        </dd>
        <dt class="col-sm-2">
            Местная связь
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalCallRate)
        </dd>
        <dt class="col-sm-2">
            Междугородная связь
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LongDistanceCallRate)
        </dd>
        <dt class="col-sm-2">
            Роуминг
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InternationalCallRate)
        </dd>
        <dt class="col-sm-2">
            Посекундная
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPerSecond)
        </dd>
        <dt class="col-sm-2">
            СМС
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SmsRate)
        </dd>
        <dt class="col-sm-2">
            ММС
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MmsRate)
        </dd>
        <dt class="col-sm-2">
            1мб
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataRatePerMb)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TariffPlanId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>

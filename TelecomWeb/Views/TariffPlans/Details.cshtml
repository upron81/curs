@model TelecomWeb.Models.TariffPlan

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Тарифный план</h4>
    <hr /><dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TariffName)
        </dd>
        <dt class="col-sm-2">
            Абонентская плата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionFee)
        </dd>
        <dt class="col-sm-2">
            Местная связь
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalCallRate)
        </dd>
        <dt class="col-sm-2">
            Междугородная связь
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LongDistanceCallRate)
        </dd>
        <dt class="col-sm-2">
            Роуминг
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InternationalCallRate)
        </dd>
        <dt class="col-sm-2">
            Посекундная
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPerSecond)
        </dd>
        <dt class="col-sm-2">
            СМС
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SmsRate)
        </dd>
        <dt class="col-sm-2">
            ММС
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MmsRate)
        </dd>
        <dt class="col-sm-2">
            1мб
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataRatePerMb)
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TariffPlanId">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

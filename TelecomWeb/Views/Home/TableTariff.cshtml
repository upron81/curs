@{
    ViewData["Title"] = "Table tariff";
}

@model IEnumerable<TelecomWeb.Models.TariffPlan>

<h1>@ViewData["Title"]</h1>

<table>
    <thead>
        <tr>
            <th>TariffPlanId</th>
            <th>LocalCallRate</th>
            <th>LongDistanceCallRate</th>
            <th>MmsRate</th>
            <th>SmsRate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tariff in Model)
        {
            <tr>
                <td>@tariff.TariffPlanId</td>
                <td>@tariff.LocalCallRate</td>
                <td>@tariff.LongDistanceCallRate</td>
                <td>@tariff.MmsRate</td>
                <td>@tariff.SmsRate</td>
            </tr>
        }
    </tbody>
</table>



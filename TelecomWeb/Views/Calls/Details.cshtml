@model TelecomWeb.Models.Call

@{
    ViewData["Title"] = "Описание";
}

<h1>Описание</h1>

<div>
    <h4>Звонок</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CallDate)
        </dd>
        <dt class = "col-sm-2">
            Продолжительность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CallDuration)
        </dd>
        <dt class = "col-sm-2">
            Номер телефона
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contract.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CallId">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

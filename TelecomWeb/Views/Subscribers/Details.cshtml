@model TelecomWeb.Models.Subscriber

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Абонент</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ФИО</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
        <dt class="col-sm-2">Домашний адрес</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.HomeAddress)</dd>
        <dt class="col-sm-2">Паспортные данные</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PassportData)</dd>
    </dl>
</div>

<h4>Расчёт стоимости услуг между датами</h4>
<form method="get">
    <input type="hidden" name="id" value="@Model.SubscriberId" />
    <div class="form-group">
        <label>Начальная дата:</label>
        <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" required />
    </div>
    <div class="form-group">
        <label>Конечная дата:</label>
        <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" required />
    </div>
    <button type="submit" class="btn btn-primary">Рассчитать</button>
</form>

@if (ViewBag.GrandTotalCost != null)
{
    <h4>Итоговая сумма услуг за указанный период</h4>
    <p><strong>Сумма: @ViewBag.GrandTotalCost.ToString("C")</strong></p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.SubscriberId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>

@model TelecomWeb.Models.InternetUsage

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Использование интернета</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsageDate)
        </dd>
        <dt class="col-sm-2">
            Отправлено (МБ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSentMb)
        </dd>
        <dt class="col-sm-2">
            Получено (МБ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataReceivedMb)
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.UsageId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>

@model TelecomWeb.Models.InternetUsage

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Использование интернета</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsageDate)
        </dd>
        <dt class="col-sm-2">
            Отправлено (МБ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSentMb)
        </dd>
        <dt class="col-sm-2">
            Получено (МБ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataReceivedMb)
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.PhoneNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UsageId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>

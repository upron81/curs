@model TelecomWeb.Models.Message

@{
    ViewData["Title"] = "Описание";
}

<h1>Описание</h1>

<div>
    <h4>Сообщение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата отправки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageDate)
        </dd>
        <dt class = "col-sm-2">
            Тип
        </dt>
        <dd class = "col-sm-10">
            @(Model.IsMms ? "MMS" : "SMS")
        </dd>
        <dt class = "col-sm-2">
            Номер телефона
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contract.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MessageId">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

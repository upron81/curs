@model IEnumerable<TelecomWeb.Models.StaffPosition>

@{
    ViewData["Title"] = "Должности";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название должности
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PositionId">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.PositionId">Подробности</a> |
                    <a asp-action="Delete" asp-route-id="@item.PositionId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
